doctype
html
  head
    meta(charset='utf-8')
    meta(http-equiv='x-ua-compatible', content='ie=edge')
    title #{author}
    meta(name='description', content='#{site_description}')
    meta(name='viewport', content='minimal-ui, width=device-width, initial-scale=1')
    link(rel='stylesheet', type='text/css' href='https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.2/normalize.min.css')
    link(rel='stylesheet', type='text/css' href='/styles/main.css')
  body
    .page-wrapper
      header
        h1 #{author}
        nav
          ul
            each page in menu
              li
                if page.id === current.path[0]
                  a.selected(href=page.link)= page.name
                else
                  a(href=page.link)= page.name
      != yield
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='/scripts/github.js')
    script.
      (function(b,o,i,l,e,r){b.GoogleAnalyticsObject=l;b[l]||(b[l]=
      function(){(b[l].q=b[l].q||[]).push(arguments)});b[l].l=+new Date;
      e=o.createElement(i);r=o.getElementsByTagName(i)[0];
      e.src='https://www.google-analytics.com/analytics.js';
      r.parentNode.insertBefore(e,r)}(window,document,'script','ga'));
      ga('create','#{ga_property_id}','auto');ga('send','pageview');
