main
  padding-top 3em

a
  text-decoration none

section.section--center
  max-width 860px
  margin 0 auto 4em
  width calc(100% - 5em)
  button
    position absolute
    top 8px
    right 8px

.github
  display none
  &.rendered
    display block
  .user
    h4
      padding-bottom 1em
    .stat
      text-align center
      font-size 1.5em
      .value
        font-size 2em
        font-weight 700
  .repo
    .stats
      border-left 1px solid rgba(0,0,0,0.1)
      .repo-data
        padding 1em
